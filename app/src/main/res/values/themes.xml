<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TelegramCollapsingToolbar" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/medium_grey</item>
        <!-- Customize your theme here. -->
    </style>


    <!--    Rounded Image-->
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RectangleImageView">
        <item name="cornerSize">0dp</item>
    </style>

    <style name="TitleText">
        <item name="android:textColor">@color/light</item>
        <item name="android:textSize">@dimen/text_size_8x</item>
    </style>

    <style name="Subtitle">
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">@dimen/text_size_6x</item>
    </style>

    <style name="HeaderText">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/text_size_8x</item>
    </style>
</resources>